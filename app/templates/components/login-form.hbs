<div class="pane-title no-margin">
{{#each flashMessages.queue as |flash|}}
    <h1>
      {{flash-message flash=flash class="shake"}}
    </h1>
{{else}}
    <h1>Account</h1>
{{/each}}
</div>

<form {{action 'authenticate' on='submit'}}>
  <div class="pane-details">
      <label>
        {{input class="no-margin" value=identification placeholder='Email'}}
        <i class="fa fa-envelope inline"></i>
      </label>
      <label>
        {{input class="no-margin" value=password placeholder='Password' type='password'}}
        <i class="fa fa-key inline"></i>
      </label>
      <span>
        No account? Register {{#link-to 'map.panel.settings.register'}}here{{/link-to}}.
      </span>
  </div>

  <button class="pane-button" type="submit">
    Login
    <span class="fa fa-sign-out button-icon"></span>
  </button>
</form>
